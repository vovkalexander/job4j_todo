<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
   <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ru.job4j.todolist.filter.AuthFilter</filter-class>
  </filter>
  <servlet>
    <servlet-name>DoListServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.AddItemServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowListServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.ShowListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UndoneItemServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.UndoneItemServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReplaceDoneServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.ReplaceDoneServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.RegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.AuthServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ExitServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.ExitServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DisplayUserServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.DisplayUserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DoListServlet</servlet-name>
    <url-pattern>/list.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UndoneItemServlet</servlet-name>
    <url-pattern>/undone.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowListServlet</servlet-name>
    <url-pattern>/show.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReplaceDoneServlet</servlet-name>
    <url-pattern>/tick.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ExitServlet</servlet-name>
    <url-pattern>/exit.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DisplayUserServlet</servlet-name>
    <url-pattern>/display.do</url-pattern>
  </servlet-mapping>
  <filter-mapping>
      <filter-name>AuthFilter</filter-name>
      <url-pattern>/index.html</url-pattern>
    </filter-mapping>
</web-app>
